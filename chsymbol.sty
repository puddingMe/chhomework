% Brackets
\newcommand{\ceil}[1]{\left\lceil#1\right\rceil} % ceiling
\newcommand{\floor}[1]{\left\lfloor#1\right\rfloor} % floor
\newcommand{\near}[1]{\left\lfloor#1\right\rceil} % near
\newcommand{\gen}[1]{\left\langle#1\right\rangle} % generated set
\newcommand{\paren}[1]{\left(#1\right)} % parenthesis
\newcommand{\brk}[1]{\left[#1\right]} % square brackets
\newcommand{\abs}[1]{\left|#1\right|} % absolute value
\newcommand{\set}[1]{\left\{#1\right\}} % set
\renewcommand{\index}[2]{\left[#1 : #2\right]} % group index/extension degree

\newcommand{\tup}[1]{\paren{#1}} % tuple
\newcommand{\ideal}[1]{\paren{#1}} % generated ideal
\newcommand{\order}[1]{\abs{#1}} % group order
\newcommand{\comm}[1]{\brk{#1}} % commutator



% Miscellaneous
\newcommand{\modulo}[1][n]{\ZZ/#1\ZZ} % Additive group modulo n
\newcommand{\bigO}{\cal{O}} % Big O
\newcommand{\p}{\partial} % partial derivative
\newcommand{\map}[3]{#1 : #2 \longrightarrow #3} % map: domain -> codomain
\newcommand{\func}[2]{#1\paren{#2}} % f(x)
\renewcommand{\gcd}[1]{\rm{gcd}\paren{#1}} % gcd
\newcommand{\lcm}[1]{\rm{lcm}\paren{#1}} % lcm


% Relations
\newcommand{\ra}{\longrightarrow} % set map
\newcommand{\injective}{\hookrightarrow}
\newcommand{\surjective}{\twoheadrightarrow}
\newcommand{\bijective}{\hookrightarrow\mathrel{\mspace{-15mu}}\rightarrow}

\newcommand{\?}{\stackrel{?}{=}} % equality in question
\newcommand{\iso}{\cong} % isomorphic
\newcommand{\divides}{\mid} % divides